import Home from './assets/Pages/Home';
import Prods from './assets/Pages/Prods';
import Prod from './assets/Pages/Prod';
import NotFoundPage from './assets/Pages/NotFoundPage';
import Basket from './assets/Pages/Basket.jsx'
import Account from './assets/Pages/Account.jsx'
import Profile from './assets/components/Profile.jsx'
import Orders from './assets/components/Orders.jsx'
import Auth from './assets/components/Auth/Auth.jsx';
import ProtectedRoute from "./context/ProtectedRoute.jsx";


const routes = [
    { path: "/", element: <Home />, name: "Home" },
    { path: "/products", element: <Prods />, name: "Products" },
    { path: "/product/:id", element: <Prod />, name: "Product" },
    { path: "/auth", element: <Auth />, name: "auth" },
    { path: "/cart", element: (
            <ProtectedRoute>
                <Basket />
            </ProtectedRoute>
            ),
        name: "Basket" },
    {
        path: "/account",
        element: (
            <ProtectedRoute>
                <Account />
            </ProtectedRoute>
        ),
        name: "Account",
        children: [
            { path: "profile", element: <Profile />, name: "Profile" },
            { path: "orders", element: <Orders />, name: "Orders" },
        ],
    },

    { path: "*", element: <NotFoundPage />, name: "NotFound" },
];

export default routes;
