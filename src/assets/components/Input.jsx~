import { useState } from "react";
import '../scss/form.scss'

const Input = () => {
    const [phone, setPhone] = useState(""); // Начальное пустое поле
    const [isFocused, setIsFocused] = useState(false); // Контроль фокуса

    const formatPhoneNumber = (value) => {
        // Удаляем все нецифры
        let cleaned = value.replace(/\D/g, "");

        // Добавляем +998, если его нет
        if (!cleaned.startsWith("998")) {
            cleaned = "998" + cleaned;
        }

        // Ограничиваем длину номера
        cleaned = cleaned.slice(0, 12);

        // Разбиваем номер по формату: +998 XX XXX XX XX
        let formatted = `+${cleaned.slice(0, 3)}`;
        if (cleaned.length > 3) formatted += ` ${cleaned.slice(3, 5)}`;
        if (cleaned.length > 5) formatted += ` ${cleaned.slice(5, 8)}`;
        if (cleaned.length > 8) formatted += ` ${cleaned.slice(8, 10)}`;
        if (cleaned.length > 10) formatted += ` ${cleaned.slice(10, 12)}`;

        return formatted;
    };

    const handleChange = (e) => {
        const formattedNumber = formatPhoneNumber(e.target.value);
        setPhone(formattedNumber);
    };

    const handleFocus = () => {
        setIsFocused(true);
        if (phone === "") setPhone("+998 ");
    };

    const handleBlur = () => {
        if (phone === "+998 ") setPhone("");
        setIsFocused(false);
    };

    return (
        <input
            type="tel"
            className='form__desc-main__inp'
            value={phone}
            onChange={handleChange}
            onFocus={handleFocus}
            onBlur={handleBlur}
            placeholder={!isFocused ? "Telefon raqam*" : ""}
            maxLength={17}
        />
    );
};

export default Input;
